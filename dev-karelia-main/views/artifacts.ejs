<!DOCTYPE html>
<html>
  <head>
    <%- include('./head'); %>
  </head>

  <body>
    <header><%- include('./header'); %></header>

    <main>
      <div><%- include('./tabs'); %></div>

      <!-- hakupalkki -->
      <div class="search-wrapper">
        <input
          type="text"
          id="searchInput"
          class="search-input"
          placeholder="Search apps, libraries, or repositories..."
        />
        <button id="searchButton" class="search-button">Search</button>
      </div>

      <!-- kortit yhdessä rivissä -->
      <div class="container">
        <div class="row justify-content-center g-4">
          <!-- kortti 1 -->
          <div class="col-md-3">
            <div class="card text-center">
              <img
                class="card-img-top mx-auto d-block mt-3"
                src="../images/git-white-simple.png"
                style="width: 120px; height: 120px"
                alt="Card image cap"
              />
              <div class="card-body">
                <h5 class="card-title">Dev Karelia</h5>
                <p class="card-text">Repository for this website.</p>
                <a
                  href="https://github.com/Karelia-University-of-Applied-Sciences/dev-karelia"
                  class="btn btn-karelia"
                  >Repository</a
                >
              </div>
            </div>
          </div>

          <!-- kortti 2 -->
          <div class="col-md-3">
            <div class="card text-center">
              <img
                class="card-img-top mx-auto d-block mt-3"
                src="../images/git-white-simple.png"
                style="width: 120px; height: 120px"
                alt="Card image cap"
              />
              <div class="card-body">
                <h5 class="card-title">Karelia Campus</h5>
                <p class="card-text">Karelia building models.</p>
                <a href="#" class="btn btn-karelia">Repository</a>
              </div>
            </div>
          </div>

          <!-- kortti 3 -->
          <div class="col-md-3">
            <div class="card text-center">
              <img
                class="card-img-top mx-auto d-block mt-3"
                src="../images/git-white-simple.png"
                style="width: 120px; height: 120px"
                alt="Card image cap"
              />
              <div class="card-body">
                <h5 class="card-title">Zigbee demo</h5>
                <p class="card-text">
                  Zigbee demonstration project and thesis.
                </p>
                <a
                  href="https://github.com/Karelia-University-of-Applied-Sciences/zigbee-tutorial"
                  class="btn btn-karelia"
                  >Repository</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <footer><%- include('./footer'); %></footer>

    <!-- hakulogiikka, suodattaa kortteja otsikon perusteella -->
    <script>
      document
        .getElementById("searchButton")
        .addEventListener("click", function () {
          const query = document
            .getElementById("searchInput")
            .value.toLowerCase();
          const cards = document.querySelectorAll(".card");

          cards.forEach((card) => {
            const title = card
              .querySelector(".card-title")
              .textContent.toLowerCase();
            const description = card
              .querySelector(".card-text")
              .textContent.toLowerCase();

            if (title.includes(query) || description.includes(query)) {
              card.parentElement.style.display = "block";
            } else {
              card.parentElement.style.display = "none";
            }
          });
        });
    </script>
  </body>
</html>
